@{
    ViewData["Title"] = "Crear Productos"; // Cambia el título según sea necesario
}

@using MVC.Models
@model Producto

<h1>Creamos un Producto</h1>

<form asp-controller="Producto" asp-action="CrearProducto">
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Precio"></label>
        <input asp-for="@Model.Precio" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

